---
export interface Props {
	numSlots: number
	id?: string
}
const { numSlots, id } = Astro.props;
const width = numSlots * 33
const midpoint = width * 0.5
---
<style>
	.underbrace {
		height: auto;
		display: block;
	}
</style>
<svg xmlns="http://www.w3.org/2000/svg" viewBox={`0 0 ${width} 10`} class={`underbrace underbrace-${numSlots}`} id={id}>
	<path
		fill="none" stroke="#000" stroke-width="0.5" stroke-linejoin="round" stroke-linecap="round"
		d={`
			M 1,1
			C 1,4 2,5 5,5
			L ${midpoint-2},5
			Q ${midpoint},5 ${midpoint},7
			Q ${midpoint},5 ${midpoint+2},5
			L ${width-5},5
			C ${width-2},5 ${width-1},4 ${width-1},1
		`}
	></path>
</svg>
