---
export interface Props {
	title: string
	description: string
	pubDate: Date
	url: string
}

const { title, description, pubDate, url } = Astro.props as Props
---

<article class="post-preview">
	<header>
		<h2><a href={url}>{title}</a></h2>
		<!-- <time>{pubDate}</time> -->
	</header>
	<p>{description}</p>
</article>
